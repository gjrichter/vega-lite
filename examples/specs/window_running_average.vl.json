{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "description": "A line graph showing how the average rating for a movie has changed over the years.",
  "data": {"url": "data/movies.json"},
  "width": 500,
  "transform": [
    {
      "window": [{
        "op": "mean",
        "field": "IMDB_Rating",
        "as": "AverageRating"
      }],
      "frame": [
        null,
        0
      ]
    },
    {"filter": "datum.AverageRating != null"},
    {"filter": "datum.AverageRating > 0"}
  ],
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "x": {
          "timeUnit": "year",
          "field": "Release_Date",
          "type": "temporal",
          "axis": {"title": "Release Date"}
        },
        "y": {
          "field": "AverageRating",
          "type": "quantitative",
          "axis": {"title": "Average Rating"},
          "scale": {"domain":[5, 8]}}
      }
    }
  ]
}
